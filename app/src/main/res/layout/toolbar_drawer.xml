<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorToolBar"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/aciToolBarDrawer"
                    android:layout_width="@dimen/dimens_30"
                    android:layout_height="@dimen/dimens_30"
                    android:padding="@dimen/dimens_1"
                    android:src="@drawable/va_drawer" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llToolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/actToolbarTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimens_2"
                        android:text="@string/app_name"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/textsize_20" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="@dimen/dimens_3">

                <LinearLayout
                    android:id="@+id/llToolbarSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_10"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/aciToolbarSearch"
                        android:layout_width="@dimen/dimens_30"
                        android:layout_height="@dimen/dimens_30"
                        android:padding="@dimen/dimens_1"
                        android:src="@drawable/va_search"
                        android:tint="@color/colorWhite" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="@dimen/dimens_3">

                <LinearLayout
                    android:id="@+id/llToolbarSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_10"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/aciToolbarSave"
                        android:layout_width="@dimen/dimens_30"
                        android:layout_height="@dimen/dimens_30"
                        android:padding="@dimen/dimens_1"
                        android:src="@drawable/va_single_select"
                        android:tint="@color/colorWhite" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.Toolbar>